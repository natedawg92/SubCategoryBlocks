<?php
/**
 * Category view template
 *
 * @var $block \NathanDay\SubCategoryBlocks\Block\Category\View
 */
?>
<?php if ($block->showSubCategories()): ?>
    <?php $_helper = $block->getOutputHelper(); ?>
    <?php if ($subcategories = $block->getSubcategories()): ?>
        <?php $mode = $block->getSubcategoryMode(); ?>
        <div class="categories wrapper <?= $mode; ?> categories-<?= $mode; ?>">
            <ol class="categories list items category-items">
                <?php foreach ($subcategories as $subcategory): ?>
                    <li class="item category category-item">
                        <div class="category-item-info">
                            <?php if ($imgUrl = $block->getCategoryImageUrl($subcategory)): ?>
                                <a href="<?= $subcategory->getUrl() ?>" class="category photo category-item-photo">
                                <span class="category-image-container">
                                    <?php $_imgHtml = '<img src="' . $imgUrl . '" />'; ?>
                                    <?php echo $_imgHtml = $_helper->categoryAttribute($subcategory, $_imgHtml, 'image'); ?>
                                </span>
                                </a>
                            <?php endif; ?>
                            <div class="category details category-item-details">
                                <strong class="category name category-item-name">
                                    <a class="category-item-link"
                                       href="<?= $subcategory->getUrl() ?>"><?= $subcategory->getName() ?></a>
                                </strong>
                                <div class="category description category-item-description">
                                    <?= $subcategory->getDescription(); ?>
                                </div>
                            </div>
                        </div>
                    </li>
                <?php endforeach; ?>
            </ol>
        </div>
    <?php endif; ?>
<?php endif; ?>

